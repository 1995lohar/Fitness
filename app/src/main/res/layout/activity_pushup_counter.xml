<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.sebastianboyd.fitness.PushupCounter"
                android:id="@+id/pushupsActivity"
                android:clickable="false" >
    <TextView android:text="@string/pushups_count"
              android:layout_width="128dp"
              android:layout_height="wrap_content"
              android:textSize="100sp"
              android:id="@+id/pushupsText"
              android:layout_centerVertical="true"
              android:layout_centerHorizontal="true" />

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;"
            android:id="@+id/button"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/pushupsText"
            android:layout_toStartOf="@+id/pushupsText"
            android:onClick="removePushup" />

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&gt;"
            android:id="@+id/button2"
            android:layout_alignTop="@+id/button"
            android:layout_toRightOf="@+id/pushupsText"
            android:layout_toEndOf="@+id/pushupsText"
            android:onClick="addPushup" />
</RelativeLayout>
